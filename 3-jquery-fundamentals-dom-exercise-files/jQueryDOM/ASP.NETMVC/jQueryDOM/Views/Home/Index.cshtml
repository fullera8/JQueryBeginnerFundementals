<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" >
<head runat="server">
    <title>Index</title>
    <style type="text/css">
        .BlueDiv { background-color: Navy; color:White;width:200px;}
        .RedDiv { background-color: Red; color:White; width:200px;}
        .Highlight { background-color:Yellow;}
        </style>
    <script src="Scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //Loop through each blue red div element, update the output with what index that is
            var output = $('#OutputDiv');
            var html = '';
            $('div.BlueDiv,div.RedDiv').each(function (index) {
                if (index >= 1) {
                    html += output.html() + '<br />'
                } 
                html += (index + 1) + ' ' + $(this).text();
            });
            output.html(html);

            //update DOM elements using attr function
            $('div.BlueDiv,div.RedDiv').each(function(index) {
                $(this).attr('title', 'Some Title');
            });

            //update single property using css function
            //$('div.BlueDiv,div.RedDiv').css('font-size', '20pt');

            //update multiple properties once using JSON within the attr function
            $('div.BlueDiv,div.RedDiv').attr(
                {
                    title: 'Some Title 2',
                    style: 'font-size:14pt; color:yellow'
                }
            );

            //modify DOM with append and prepend function
            var table = $('#DataTable')
            table.prepend('<span style="background-color:green">Prepend Child 1</span>');
            table.append('<span style="background-color:green">Append Child 1</span>');

            ////DOM wrap foo bar baz
            //$('span.Foo').wrap('<div class="RedDiv ParentWrapper" />')
            ////$('div.ParentWrapper').each(function () {
            ////    alert($(this).html());
            ////});

            ////DOM remove
            //$('div.ParentWrapper').remove();

            //update multiple css styles using JSON so it does not have to all be on the same line
            $('span.Foo').css({
                'background-color': 'purple',
                'color': 'white',
                'font-size': '10pt'
            });

            //DOM class manipulation 
            //$('input[type="text"]').addClass('Highlight');
            //$('#LastNameTextBox').removeClass('Highlight');

            //personal DOM toggle fade
            $('input[type="text"]').hover(function () {
                $(this).fadeIn('slow').animate({
                    backgroundColor: 'yellow'
                });
            });

        });

        //DOM toggle class
        function FocusBlur(tb) {
            $(tb).toggleClass('Highlight')
        }

        //personal DOM toggle fade
        //function FocusHover(tb) {
        //    $(this).fadeIn('slow').animate({
        //        backgroundColor: 'yellow'
        //    });
        //}


    </script>
</head>
<body>
    <div id="OutputDiv"></div>
    <div id="TableContainerDiv" title="Contains Table">
        <table id="DataTable">
          <tr>
             <td>Cell 1 Row 1</td>
          </tr>
          <tr>
             <td>Cell 1 Row 2</td>
          </tr>
          <tr>
             <td>Cell 1 Row 3</td>
          </tr>
          <tr>
             <td>
                <table style="width:100%">
                    <tr>
                        <td>Nested Table Cell and Row</td>
                    </tr>
                </table>
             </td>
          </tr>
        </table>
    </div>
    <div class="BlueDiv">
        <span>Blue div</span>
    </div>
    <span class="Foo">Span 1</span>

    <span class="Foo">Span 2</span>

    <span id="Span3" class="Foo">Span 3</span>
    <br />
    <div class="RedDiv">
        <span>Red div</span>
    </div>
    <form id="form1" runat="server">
        <table style="width:300px;">
            <tr>
                <td style="width:30%;">First Name</td>
                <td style="width:70%;"><input id="FirstNameTextBox" onfocus="FocusBlur(this)" onblur="FocusBlur(this)" value="John" type="text" /></td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td><input id="LastNameTextBox" onfocus="FocusBlur(this)" onblur="FocusBlur(this)" type="text" /></td>
            </tr>
            <tr>
                <td>Comments</td>
                <td><textarea rows="5" cols="60" id="CommentsTextBox">TextArea</textarea></td>
            </tr>           
            <tr>
                <td>
                <select id="sel">
                    <option value="AZ">AZ</option>
                    <option value="CA" selected="true">CA</option>
                </select></td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td><input id="SubmitButton" type="button" value="Submit" /></td>
                <td>&nbsp;</td>
            </tr>
        </table>  

    </form>
</body>
</html>
